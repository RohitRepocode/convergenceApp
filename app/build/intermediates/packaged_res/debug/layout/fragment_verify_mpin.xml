<?xml version="1.0" encoding="utf-8"?>

                                              
                                                   
                                         



       

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login" android:tag="layout/fragment_verify_mpin_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" tools:context=".Mpin.VerifyMpinFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_usermsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_extra_bold"
            android:gravity="center_horizontal"
            android:text="@string/enter_your_mpin"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_userDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center_horizontal"
                android:text="@string/for_secure_access"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <com.chaos.view.PinView
            android:id="@+id/pinview_getMpin"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:cursorVisible="true"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="numberPassword"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorColor="@color/green_500"
            app:cursorWidth="2dp"
            app:itemCount="4"
            app:itemHeight="48dp"
            app:itemRadius="4dp"
            app:itemSpacing="0dp"
            app:itemWidth="48dp"
            app:lineColor="@color/green_500"
            app:lineWidth="2dp"
            app:viewType="rectangle" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_mpie_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Wrong PIN 1 attempt remaining."
            android:gravity="center"
            android:fontFamily="@font/manrope_regular"
            android:textColor="@color/red_500"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify"
        style="@style/IconTextContainedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/manrope_semi_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/btn_verify_mpin"
        android:textSize="16sp" />
</RelativeLayout>

         