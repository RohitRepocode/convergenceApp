<?xml version="1.0" encoding="utf-8"?>

                                              
                                                   
                                      



       

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login" android:tag="layout/fragment_set_mpin_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" tools:context=".Mpin.SetMpinFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="130dp">
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_mpin_title"
                android:textSize="22sp"
                android:fontFamily="@font/manrope_extra_bold"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_mpin_msg"
                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/black" />
        </LinearLayout>
        <com.chaos.view.PinView
            android:layout_gravity="center_horizontal"
            android:id="@+id/pinview_first"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:cursorVisible="true"
            android:inputType="numberPassword"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_regular"
            app:cursorColor="@color/green_500"
            app:cursorWidth="2dp"
            app:itemCount="4"
            app:itemHeight="48dp"
            app:itemRadius="4dp"
            app:itemSpacing="0dp"
            app:itemWidth="48dp"
            app:lineColor="@color/green_500"
            app:lineWidth="2dp"
            app:viewType="rectangle" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_mpin_confirm"
                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/black" />
            <com.chaos.view.PinView
                android:id="@+id/pinview_second"
                android:layout_gravity="center_horizontal"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:cursorVisible="true"
                android:inputType="numberPassword"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                app:cursorColor="@color/green_500"
                app:cursorWidth="2dp"
                app:itemCount="4"
                app:itemHeight="48dp"
                app:itemRadius="4dp"
                app:itemSpacing="0dp"
                app:itemWidth="48dp"
                app:lineColor="@color/green_500"
                app:lineWidth="2dp"
                app:viewType="rectangle" />


        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_setMpin"
        style="@style/IconTextContainedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/manrope_semi_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/tv_mpin_confirm"
        android:textSize="16sp" />


</RelativeLayout>

         